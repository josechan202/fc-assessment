<div id="<%= dom_id item %>" class="partial" >
<!--     onclick="window.location.href='<%= edit_item_path(item.id) %>'">-->
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= item.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Weight: <%= item.weight %></strong>

  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Brand:</strong>
    <%= item.brand %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= item.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= Category.find(item.category_id).name if item.category_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price: $ <%= item.price %></strong>
  </p>


  <% if @context == :items_page %>
    <%= button_to "Add to cart", carts_path(item_id: item.id), method: :post, class: "p-3 rounded-lg bg-yellow-200" %>
  <% end %>
  <% if @context == :cart_page %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Quantity:</strong> <%= @cart_items.find_by(item_id: item.id).quantity %>
    </p>
    <%= button_to "Remove from cart", cart_path(item_id: item.id), method: :delete, class: "p-3 rounded-lg bg-red-400" %>
  <% end %>



</div>
